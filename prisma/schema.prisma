generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String       @id @default(cuid())
  name            String?
  email           String?      @unique
  emailVerified   DateTime?
  image           String?
  password        String?
  accounts        Account[]
  items           Item[]
  itemRanks       ItemRank[]
  lists           List[]
  sessions        Session[]
  createdTokens   ShareToken[]
  sharedItemsSent SharedItem[] @relation("ItemSender")
  sharedItems     SharedItem[] @relation("ItemRecipient")
  sharedListsSent SharedList[] @relation("ListSender")
  sharedLists     SharedList[] @relation("ListRecipient")
  passwordResetTokens PasswordResetToken[]
}

model List {
  id           String          @id @default(cuid())
  title        String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  ownerId      String
  forkedFromId String?
  owner        User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  forkedFrom   List?           @relation("ListForks", fields: [forkedFromId], references: [id], onDelete: SetNull)
  forks        List[]          @relation("ListForks")
  filterTags   ListFilterTag[]
  shares       SharedList[]
}

model Item {
  id        String       @id @default(cuid())
  content   String
  isChecked Boolean      @default(false)
  title     String?
  imageUrl  String?
  link      String?
  location  String?
  status    String?      // 'EXPERIENCED' or 'WANT_TO_EXPERIENCE'
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now()) @updatedAt
  ownerId   String
  owner     User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ranks     ItemRank[]
  tags      ItemTag[]
  shares    SharedItem[]
}

model Tag {
  id         String          @id @default(cuid())
  name       String          @unique
  color      String          @default("blue")
  items      ItemTag[]
  smartLists ListFilterTag[]
}

model ItemTag {
  itemId String
  tagId  String
  item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([itemId, tagId])
}

model ListFilterTag {
  listId String
  tagId  String
  list   List   @relation(fields: [listId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([listId, tagId])
}

model SharedList {
  id         String  @id @default(cuid())
  userId     String
  listId     String
  sharedById String?
  permission String  @default("WRITE") // 'READ' or 'WRITE'
  list       List    @relation(fields: [listId], references: [id], onDelete: Cascade)
  sharedBy   User?   @relation("ListSender", fields: [sharedById], references: [id])
  user       User    @relation("ListRecipient", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, listId])
}

model ItemRank {
  id        String @id @default(cuid())
  userId    String
  contextId String
  itemId    String
  rank      String
  item      Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, contextId, itemId])
  @@index([userId, contextId, rank])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([email, token])
}

model ShareToken {
  id        String    @id @default(cuid())
  token     String    @unique
  type      String
  entityId  String
  creatorId String
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  creator   User      @relation(fields: [creatorId], references: [id], onDelete: Cascade)
}

model SharedItem {
  id         String @id @default(cuid())
  userId     String
  itemId     String
  sharedById String
  item       Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)
  sharedBy   User   @relation("ItemSender", fields: [sharedById], references: [id], onDelete: Cascade)
  user       User   @relation("ItemRecipient", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, itemId])
}
